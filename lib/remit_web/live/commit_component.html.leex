<a
  href="https://github.com/<%= @commit.owner %>/<%= @commit.repo %>"
  id="commit-<%= @commit.id %>" 
  phx-click="selected" phx-value-cid="<%= @commit.id %>" phx-hook="AllowLinkDefaultAndPreventNestedDefault"
  class="
    commit
    flex items-center no-underline
    border border-solid border-gray-light rounded
    my-1 mx-2 py-2 px-3
    <%= if @commit.reviewed_at, do: " reviewed" %>
    <%= if @your_last_selected_commit?, do: " highlight" %>
  ">
  <div class="flex-none mr-3">
    <%= gravatar(@commit.author_email, "rounded #{if @commit.reviewed_at, do: "gravatar--small", else: "gravatar--big"}") %>
  </div>
  <div class="flex-1">
    <p class="<%= if @commit.reviewed_at, do: "inline", else: "mb-1 text-sm leading-snug" %>"><%= @commit.message %></p>
    <p class="<%= if @commit.reviewed_at, do: "inline", else: "" %>">
      in <b title="<%= @commit.owner %>/<%= @commit.repo %>"><%= @commit.repo %></b>
      <%= unless @commit.reviewed_at do %>
        by <b><%= @commit.author_name %></b>
        on <%= Utils.format_datetime(@commit.committed_at) %>
      <% end %>
    </p>
  </div>
  <div class="flex-none ml-2">
    <%= cond do %>
      <% @commit.reviewed_at && @you_authored? -> %>
        <%# Don't show buttons. %>
      <% @commit.reviewed_at && !@you_authored? && @email -> %>
        <button phx-click="mark_unreviewed" phx-value-cid="<%= @commit.id %>" class="opacity-25 hover:opacity-100">
          <i class="far fa-eye-slash"></i>
          Mark as new
        </button>
      <% @commit.review_started_at && !@commit.reviewed_at && @you_are_reviewing? -> %>
        <button phx-click="mark_unreviewed" phx-value-cid="<%= @commit.id %>" class="bg-red-100">
          <i class="fas fa-eye-slash text-red-700"></i>
          Abandon review
        </button>

        <button phx-click="mark_reviewed" phx-value-cid="<%= @commit.id %>" class="bg-green-light ml-2">
          <i class="fas fa-check text-green-700"></i>
          Mark as reviewed
        </button>
      <% @commit.review_started_at && !@commit.reviewed_at && !@you_are_reviewing? -> %>
        <div class="text-gray-mid" title="Since <%= Utils.format_datetime(@commit.review_started_at) %>">
          <%= gravatar(@commit.review_started_by_email, "gravatar--small inline") %>
          Reviewingâ€¦
        </div>
      <% !@you_authored? && @email -> %>
        <button phx-click="start_review" phx-value-cid="<%= @commit.id %>" class="hover:bg-yellow-100 hover:border-yellow-mid">
          <i class="fas fa-eye text-yellow-mid"></i>
          Start review
        </button>
      <% true -> %>
        <%# Don't show buttons. %>
    <% end %>
  </div>

  <div class="flex-none ml-3">
    <%= if @commit.reviewed_at do %>
      <%= gravatar(@commit.reviewed_by_email, "gravatar--small") %>
    <% else %>
      <%# Take up same amount of space as the Gravatar would. %>
      <div class="gravatar--small"></div>
    <% end %>
  </div>
</a>
