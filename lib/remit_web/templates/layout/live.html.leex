<div class="tabs">
  <%= live_redirect(to: Routes.live_path(@socket, RemitWeb.CommitsLive)) do %>
    <i class="fas fa-eye"></i>
    Commits
  <% end %>
  <%= live_redirect(to: Routes.live_path(@socket, RemitWeb.CommentsLive)) do %>
    <i class="fas fa-watch"></i>
    Comments
  <%= end %>
  <%= live_redirect(to: Routes.live_path(@socket, RemitWeb.SettingsLive)) do %>
    <i class="fas fa-cog"></i>
    Settings
  <%= end %>
  <%= if function_exported?(Routes, :live_dashboard_path, 2) do %>
    <%= link(to: Routes.live_dashboard_path(@socket, :home)) do %>
      <i class="fas fa-tachometer-alt"></i>
      LD
    <% end %>
  <% end %>
</div>

<main role="main">
  <p class="alert alert-info" role="alert"
    phx-click="lv:clear-flash"
    phx-value-key="info"><%= live_flash(@flash, :info) %></p>

  <p class="alert alert-danger" role="alert"
    phx-click="lv:clear-flash"
    phx-value-key="error"><%= live_flash(@flash, :error) %></p>

  <%= @inner_content %>
</main>
